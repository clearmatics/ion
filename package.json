    "web3-eth-abi": "1.0.0-beta.33",
    "web3-utils": "1.0.0-beta.33"
  },
  "scripts": {
    "benchmark-compare": "node ./node_modules/solidity-benchmark/src/benchmark.js compare",
    "istanbulRpcWithBlockTime": "ganache-cli --hardfork istanbul --blockTime 2 --port 8545 --gasLimit 0xFFFFFFFFFFFFF --gasPrice 0 --defaultBalanceEther 99999999999 --networkId 1234",
    "testrpc": "ganache-cli --port 8545 --gasLimit 0xFFFFFFFFFFFFF --gasPrice 0 --defaultBalanceEther 99999999999 --networkId 1234",
    "istanbulRpc": "ganache-cli --hardfork istanbul --port 8545 --gasLimit 0xFFFFFFFFFFFFF --gasPrice 0 --defaultBalanceEther 99999999999 --networkId 1234",
    "petersburgRpc": "ganache-cli --hardfork petersburg --port 8545 --gasLimit 0xFFFFFFFFFFFFF --gasPrice 0 --defaultBalanceEther 99999999999 --networkId 1234",
    "debugRpc": "node /usr/local/bin/ganache-cli --max-old-space-size=5000 --port 8545 --gasLimit 0xFFFFFFFFFFFFF --gasPrice 0 --defaultBalanceEther 99999999999 --networkId 1234",
    "clirpc": "ganache-cli --port 8545 --gasLimit 0xFFFFFFFFFFFFF --gasPrice 0 --defaultBalanceEther 99999999999 --networkId 1234",
    "compile": "truffle compile",
    "deploy": "truffle migrate",
    "test": "truffle test",
    "debug": "truffle debug",
    "coverage": "solidity-coverage",
    "lint": "solhint contracts/**/*.sol",
    "genbin": "solc --overwrite --bin ./contracts/*.sol -o abi",
    "genabi": "solc --overwrite --abi ./contracts/*.sol -o abi"
  }
}
